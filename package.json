{
  "name": "movie-explorer-ai",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "dev": "bash scripts/dev.sh",
    "dev:web": "npm run dev --workspace web",
